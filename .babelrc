{
    "presets": [
        [
            "next/babel",
            {
                "styled-jsx": {
                    "plugins": ["styled-jsx-plugin-postcss"]
                },
                "preset-env": {
                    "modules": "commonjs"
                }
            }
        ]
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "root": ["./"],
                "alias": {
                    "@components": "./components",
                    "@actions": "./actions",
                    "@reducers": "./reducers",
                    "@store": "./store"
                }
            }
        ],
        "transform-decorators-legacy",
        "transform-function-bind"
    ]
}
